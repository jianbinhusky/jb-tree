<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Slow Tests" parallel="false">
    <test verbose="1" name="Slow Tests">
        <groups>
            <run>
                <include name="slow"/>
            </run>
        </groups>

        <packages>
            <package name=".*" />
        </packages>
    </test>
</suite>